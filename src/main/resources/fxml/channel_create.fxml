<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" styleClass="dialog-pane" xmlns:fx="http://javafx.com/fxml" fx:controller="com.telegramapp.ui.controllers.ChannelCreateController">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="Create Channel" styleClass="dialog-header"/>
    <TextField fx:id="channelNameField" promptText="Channel name" prefWidth="420"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Label fx:id="messageLabel" styleClass="error-label" HBox.hgrow="ALWAYS"/>
        <Button text="Cancel" onAction="#onCancel" styleClass="secondary-button"/>
        <Button text="Create" onAction="#onCreate" styleClass="button"/>
    </HBox>
</VBox>

