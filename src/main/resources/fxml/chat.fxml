<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.telegramapp.ui.controllers.ChatController">
  <center>
    <!-- Message area -->
    <ListView fx:id="messagesList" prefWidth="800" prefHeight="520"/>
  </center>

  <bottom>
    <HBox spacing="8" padding="10">
      <Button text="Attach" onAction="#onAttach"/>
      <TextField fx:id="messageField" HBox.hgrow="ALWAYS" promptText="Write a message..." />
      <Button text="Send" onAction="#onSend"/>
    </HBox>
  </bottom>
</BorderPane>
