<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<!-- This FXML is verified to match the ChatController.java -->
<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.telegramapp.ui.controllers.ChatController">
  <center>
    <ListView fx:id="messagesList" styleClass="messages-list"/>
  </center>
  <bottom>
    <StackPane fx:id="bottomContainer" styleClass="bottom-container">
      <children>
        <!-- This HBox contains the message input field and send button -->
        <HBox fx:id="messageInputContainer" alignment="CENTER_LEFT" spacing="10">
          <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
          </padding>
          <Button mnemonicParsing="false" onAction="#onAttach" text="Attach" styleClass="secondary-button"/>
          <TextField fx:id="messageField" promptText="Write a message..." HBox.hgrow="ALWAYS"/>
          <Button defaultButton="true" mnemonicParsing="false" onAction="#onSend" text="Send"/>
        </HBox>

        <!-- This button is for joining channels and is usually hidden -->
        <Button fx:id="joinChannelButton" alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onJoinChannel" text="Join Channel" visible="false"/>
      </children>
    </StackPane>
  </bottom>
</BorderPane>
