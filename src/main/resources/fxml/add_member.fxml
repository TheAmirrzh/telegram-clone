<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.telegramapp.ui.controllers.AddMemberController" spacing="10" styleClass="dialog-pane">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Add Member" styleClass="dialog-header"/>
    <TextField fx:id="searchField" promptText="Search for users..."/>
    <ListView fx:id="usersListView" VBox.vgrow="ALWAYS"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Label fx:id="messageLabel" styleClass="error-label" HBox.hgrow="ALWAYS"/>
        <Button text="Cancel" onAction="#onCancel" styleClass="secondary-button"/>
        <Button text="Add Selected" onAction="#onAdd" styleClass="button"/>
    </HBox>
</VBox>

