<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<!-- MODIFIED: Applied new design principles -->
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.telegramapp.ui.controllers.ProfileController"
      alignment="TOP_CENTER" spacing="20.0" styleClass="dialog-pane">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label styleClass="dialog-header" text="User Profile"/>

    <ImageView fx:id="profileImageView" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
        <clip>
            <Circle centerX="50.0" centerY="50.0" radius="50.0"/>
        </clip>
    </ImageView>

    <Button fx:id="chooseImageButton" mnemonicParsing="false" onAction="#onChooseImage" text="Upload Picture" styleClass="secondary-button"/>

    <VBox spacing="5.0" style="-fx-max-width: 300;">
        <Label text="Display Name" styleClass="form-label"/>
        <TextField fx:id="displayNameField" promptText="Your display name" styleClass="chat-input-field"/>
    </VBox>

    <VBox spacing="5.0" style="-fx-max-width: 300;">
        <Label text="Bio" styleClass="form-label"/>
        <TextArea fx:id="bioField" prefRowCount="3" promptText="Your bio..." styleClass="chat-input-field"/>
    </VBox>

    <HBox alignment="CENTER" spacing="10.0">
        <Button fx:id="saveButton" defaultButton="true" onAction="#onSave" text="Save Changes" styleClass="success-button"/>
        <Button fx:id="logoutButton" cancelButton="true" onAction="#onLogout" styleClass="danger-button" text="Logout"/>
    </HBox>

    <Label fx:id="messageLabel" styleClass="error-label"/>
</VBox>
