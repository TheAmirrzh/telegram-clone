<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml" fx:controller="com.telegramapp.controller.LoginController">
  <padding>
    <Insets top="20" right="20" bottom="20" left="20"/>
  </padding>
  <Label text="Telegram Clone" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
  <TextField fx:id="usernameField" promptText="Username" />
  <PasswordField fx:id="passwordField" promptText="Password" />
  <HBox spacing="10">
    <Button fx:id="loginButton" text="Login" onAction="#onLogin" />
    <Button fx:id="registerButton" text="Register" onAction="#onRegister" />
  </HBox>
  <Label fx:id="errorLabel" textFill="red" />
</VBox>
