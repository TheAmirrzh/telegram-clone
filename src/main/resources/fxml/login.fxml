<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane styleClass="background-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml" fx:controller="com.telegramapp.controller.LoginController">
  <VBox alignment="CENTER" spacing="20" maxWidth="380" styleClass="glass-pane">
    <padding>
      <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>
    <Label text="Welcome" styleClass="login-title"/>
    <Label text="Please enter your credentials to continue." style="-fx-text-fill: -text-secondary; -fx-wrap-text: true; -fx-text-alignment: center;"/>

    <VBox spacing="15">
      <TextField fx:id="usernameField" promptText="Username" styleClass="login-text-field"/>
      <PasswordField fx:id="passwordField" promptText="Password" styleClass="login-text-field"/>
    </VBox>

    <HBox spacing="10">
      <Button fx:id="loginButton" text="Login" onAction="#onLogin" styleClass="login-button" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
      <Button fx:id="registerButton" text="Register" onAction="#onRegister" styleClass="login-button" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
    </HBox>
    <Label fx:id="errorLabel" textFill="#D32F2F" alignment="CENTER" maxWidth="Infinity"/>
  </VBox>
</StackPane>