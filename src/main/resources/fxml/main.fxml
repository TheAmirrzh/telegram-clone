<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.Region?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.telegramapp.ui.controllers.MainController">
  <top>
    <ToolBar>
      <Label text="Telegram - Chats" style="-fx-font-weight:bold;"/>
      <Region fx:id="spacer" HBox.hgrow="ALWAYS"/>
      <Button text="New Group" onAction="#onNewGroup"/>
      <Button text="New Channel" onAction="#onNewChannel"/>
    </ToolBar>
  </top>

  <center>
    <HBox spacing="12">
      <!-- Users -->
      <VBox spacing="6" prefWidth="220" padding="8">
        <Label text="Users" style="-fx-font-weight:bold;"/>
        <ListView fx:id="usersListView" prefHeight="520" />
      </VBox>

      <!-- Groups -->
      <VBox spacing="6" prefWidth="220" padding="8">
        <Label text="Groups" style="-fx-font-weight:bold;"/>
        <ListView fx:id="groupsListView" prefHeight="520" />
      </VBox>

      <!-- Channels + Profile -->
      <VBox spacing="8" prefWidth="260" padding="8">
        <Label text="Channels" style="-fx-font-weight:bold;"/>
        <ListView fx:id="channelsListView" prefHeight="260"/>

        <Separator/>

        <Label text="Profile" style="-fx-font-weight:bold;"/>
        <Label fx:id="profileName" text="Name"/>
        <Label fx:id="profileUsername" text="@username" style="-fx-text-fill:#666;"/>
      </VBox>
    </HBox>
  </center>
</BorderPane>
