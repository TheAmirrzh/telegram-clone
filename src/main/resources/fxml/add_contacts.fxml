<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.telegramapp.ui.controllers.AddContactController" spacing="15" styleClass="dialog-pane">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Add New Contact" styleClass="dialog-header"/>

    <Label text="Find people by their username or display name." styleClass="form-label"/>

    <TextField fx:id="searchField" promptText="Search for users..." prefWidth="450"/>

    <ListView fx:id="usersListView" VBox.vgrow="ALWAYS" prefHeight="300"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Label fx:id="messageLabel" styleClass="error-label" HBox.hgrow="ALWAYS"/>
        <Button text="Close" onAction="#onCancel" styleClass="secondary-button"/>
        <Button fx:id="addButton" text="Add Contact" onAction="#onAdd" styleClass="success-button" disable="true"/>
    </HBox>
</VBox>