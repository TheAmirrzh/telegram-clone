<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.telegramapp.ui.controllers.AddContactController" spacing="15" styleClass="dialog-pane">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header -->
    <Label text="Add Contact" styleClass="dialog-header"/>

    <!-- Instructions -->
    <Label text="Search for users by username or display name" styleClass="form-label"/>

    <!-- Search Field -->
    <TextField fx:id="searchField" promptText="Search users..." prefWidth="450"/>

    <!-- Users List -->
    <ListView fx:id="usersListView" VBox.vgrow="ALWAYS" prefHeight="300"/>

    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Label fx:id="messageLabel" styleClass="error-label" HBox.hgrow="ALWAYS"/>
        <Button text="Cancel" onAction="#onCancel" styleClass="secondary-button"/>
        <Button fx:id="addButton" text="Add to Contacts" onAction="#onAdd" styleClass="button" disable="true"/>
    </HBox>
</VBox>