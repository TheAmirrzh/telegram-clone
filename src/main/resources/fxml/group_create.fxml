<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" styleClass="dialog-pane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.telegramapp.ui.controllers.GroupCreateController">
    <padding>
        <Insets bottom="12" left="12" right="12" top="12" />
    </padding>

    <Label styleClass="heading" text="Create New Group" />
    <TextField fx:id="groupNameField" promptText="Group Name" />

    <HBox spacing="10" VBox.vgrow="ALWAYS">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Available Users" />
            <ListView fx:id="availableUsersList" prefHeight="200.0" />
        </VBox>

        <VBox alignment="CENTER" spacing="10">
            <Button onAction="#onAddSelected" text="&gt;" />
            <Button onAction="#onRemoveSelected" text="&lt;" />
        </VBox>

        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Selected Users" />
            <ListView fx:id="selectedUsersList" prefHeight="200.0" />
        </VBox>
    </HBox>

    <HBox alignment="CENTER_RIGHT" spacing="8">
        <Label fx:id="messageLabel" styleClass="error-label" HBox.hgrow="ALWAYS" />
        <Button onAction="#onCancel" text="Cancel" />
        <Button onAction="#onCreate" styleClass="primary" text="Create" />
    </HBox>
</VBox>
